@model CompCoupon





<form asp-action="Create">

    <div class="card">
        <div class="card-body">
            <div class="row">

                <div class="col-6">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                            <div class="field-wrapper">
                                <select asp-for="CompId" asp-items="ViewBag.Companies" type="text" class="form-select"></select>
                                <div class="field-placeholder">اسم الشركة</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                            <div class="field-wrapper">
                                <select asp-for="DiscountType" asp-items="Html.GetEnumSelectList<Coupon.Models.Enum.DiscountType>()" type="text" class="form-select"></select>
                                <div class="field-placeholder">نوع الخصم</div>
                            </div>
                        </div>
                    </div>
                </div>



                <div class="col-6">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                            <div class="field-wrapper">
                                <input asp-for="Count" type="text" class="form-control" />
                                <div class="field-placeholder">عدد الكوبونات</div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-6">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                            <div class="field-wrapper">
                                <input asp-for="ExpireDate" type="date" class="form-control" />
                                <div class="field-placeholder">تاريخ الانتهاء </div>
                            </div>
                        </div>
                    </div>
                </div>

                <div class="col-12">
                    <div class="form-group">
                        <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                            <div class="field-wrapper">
                                <input asp-for="Discount" type="range" min="1" max="100" step="0.5" value="1" class="form-range" />
                                <div class="field-placeholder">مقدار الخصم</div>
                            </div>
                        </div>
                    </div>
                </div>




            </div>
                <div class="form-group">
                    <input type="submit" value="انشاء" class="btn btn-primary" /> <a class="btn btn-secondary" asp-action="Index">العودة الى قائمة الكوبونات</a>
                </div>
        </div>
    </div>
</form>