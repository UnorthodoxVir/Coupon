<div class="row card">

    <div class="col-md-12 p-4">
        <form class="row g-3" asp-action="Index">
            <div class="col-4">
            </div>


            <div class="col-md-3">
                <div class="form-group">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                        <div class="field-wrapper">
                            <select asp-for="DiscountType" id="branch" class="select-single js-states" asp-items="Html.GetEnumSelectList<Coupon.Models.Enum.DiscountType>()">
                                <option selected value="0">الكل</option>
                            </select>
                            <div class="field-placeholder">نوع المركز</div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="col-md-3">
                <div class="form-group">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                        <div class="field-wrapper">
                            <select asp-for="City" id="branch" class="select-single js-states" asp-items="Html.GetEnumSelectList<Coupon.Models.Enum.City>()">
                                <option selected value="78">الكل</option>
                            </select>
                            <div class="field-placeholder">المدينة</div>
                        </div>
                    </div>

                </div>
            </div>

            <div class="col-md-1">
                <div class="form-group">
                    <div class="col-xl-12 col-lg-12 col-md-12 col-lg-12 col-12">
                        <div class="field-wrapper">
                            <input type="submit" value="تصفية" class="btn btn-secondary" />
                        </div>
                    </div>
                </div>
            </div>
        </form>
    </div>
</div>



<div class="row">
    @foreach (var item in Model.CouponCards)
    {
        <div class="col-sm-12 col-md-4 col-lg-4">
            <div class="dl">
                <div class="brand">
                    <h2>
                        شركة @item.CompCoupon.Company.Name
                    </h2>
                </div>

                @if (item.CompCoupon.DiscountType == Coupon.Models.Enum.DiscountType.مغاسل)
                {
                    <div class="discount peter-river">
                        @item.CompCoupon.Discount%
                        <div class="type">
                            خصم مغاسل
                        </div>
                    </div>
                }
                else if (item.CompCoupon.DiscountType == Coupon.Models.Enum.DiscountType.ورش)
                {
                    <div class="discount amethyst">
                        @item.CompCoupon.Discount%
                        <div class="type">
                            خصم ورش
                        </div>
                    </div>
                }
                else
                {
                    <div class="discount emerald">
                        @item.CompCoupon.Discount%
                        <div class="type">
                            خصم تلميع
                        </div>
                    </div>
                }
                <div class="descr text-center">
                    <h5>
                        مكان المركز: @System.Enum.GetName(typeof(Coupon.Models.Enum.City), item.CompCoupon.Company.City)
                    </h5>
                    <h3>
                        الكوبون ساري حتى
                    </h3>
                    <h3>
                        @item.CompCoupon.ExpireDate.Day / @item.CompCoupon.ExpireDate.Month / @item.CompCoupon.ExpireDate.Year
                    </h3>

                </div>
                <div class="ends">
                    <small>
                        * Conditions and restrictions apply.
                    </small>
                </div>

                <a onclick=GetItem("@item.Id")>
                    <div class="coupon midnight-blue">
                        الحصول على الرمز

                    </div>
                </a>

            </div>
        </div>
    }
</div>



<script>

    function GetItem(id) {

        $("#catModal").modal("show")
        $("#couponAddress").val(id)
    }





    $(document).ready(function() {


        $("#btnCreate").click(function() {

            if ($("#txtName").val() == "" || $("#txtPhone").val() == "" || $("#txtEmail").val() == "" || $("#txtPlatenumber").val() == "") {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'أحد الحقول فارغة',
                })

                return
            }

            if ($("#txtPhone").val().length != 12 || !isNaN($("#txtPhone").val()) == false) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'رقم الجوال المدخل غير صحيح, تأكد من الطريقة الصحيحة',
                })
                return
            }

            if (validateEmail($("#txtEmail").val()) == false) {
                Swal.fire({
                    icon: 'error',
                    title: 'خطأ',
                    text: 'البريد الالكتروني المدخل غير صحيح',
                })
                return
            }

            var model = JSON.stringify({
                phoneNumber: $("#txtPhone").val()
            })

            $.ajax({
                contentType: "application/json; charset=utf-8",
                url: "/Customers/CheckPhoneNumber",
                type: 'POST',
                data: model,
                dataType: "Json",
                success: function(data) {
                    if (data.isUsed) {
                        Swal.fire({
                            icon: 'error',
                            title: 'خطأ',
                            text: 'رقم الجوال مستعمل سابقا',
                        })
                    }
                    else {
                        var model = JSON.stringify({

                            name: $("#txtName").val(),
                            phoneNumber: $("#txtPhone").val(),
                            email: $("#txtEmail").val(),
                            city: $("#city").val(),
                            vehicle: $("#brandName").val() + " " + $("#carName").val(),
                            plateNumber: $("#txtPlatenumber").val(),
                            model: $("#txtModel").val(),
                            usedCoupon: $("#couponAddress").val()
                            //END OF VAR MODEL
                        })


                        $.ajax({
                            contentType: "application/json; charset=utf-8",
                            url: "/Customers/Create",
                            type: "POST",
                            data: model,
                            dataType: "Json",
                            beforeSend: function() {
                                Swal.fire({
                                    icon: 'info',
                                    html: 'يتم حفظ المعلومات',
                                    showConfirmButton: false
                                })
                            },
                            success: function() {

                                $("#catModal").modal("hide")
                                $('#catModal').on('hidden.bs.modal', function() {
                                    $('#OTPModal').modal('show')
                                })
                                //END OF SUCCESS
                            },
                            error: function() { }
                            //END OF AJAX REQUEST
                        })
                    }
                    //END OF SUCCESS AJAX
                }
            })




            //END OF .CLICK()
        })


        $("#btnOTP").click(function() {


            var otp = JSON.stringify({
                code: $("#txtOTP").val()
            })

            $.ajax({
                contentType: "application/json; charset=utf-8",
                url: "/Customers/SubmitOTP",
                type: "POST",
                data: otp,
                dataType: "Json",
                beforeSend: function() {
                    Swal.fire({
                        icon: 'info',
                        html: 'جاري التحقق من الرمز',
                        showConfirmButton: false
                    })
                },
                success: function(data) {

                    if (data.isValid) {


                        Swal.fire({
                            icon: 'success',
                            title: 'تهانينا!',
                            text: 'تم التحقق من جوالك وسوف يتم ارسال رمز الكوبون على رقم نفس الرقم',
                            showConfirmButton: false,
                            timer: 5000
                        })
                    }
                    else {

                        Swal.fire({
                            icon: 'error',
                            title: 'خطأ',
                            text: 'رمز التحقق المدخل غير صحيح, حاول مجددا',
                        })

                    }

                },
                error: function() { }
                //END OF AJAX REQUEST
            })

        })

        //END OF $(DOCUMENT).READY()
    })



</script>


